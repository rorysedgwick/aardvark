{
  "name": "aardvark",
  "version": "1.0.0",
  "description": "a quiz game to help learn 2 digit abbreviations of countries around the world ",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run browserify && npm run watch",
    "browserify": "browserify src/js/main.js -o public/assets/js/bundle.js",
    "start": "nodemon app.js",
    "test": "node test/**/*.js | tap-nyan",
    "watch": "watchify src/js/main.js -o public/assets/js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rorysedgwick/aardvark.git"
  },
  "author": "rorysedgwick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rorysedgwick/aardvark/issues"
  },
  "homepage": "https://github.com/rorysedgwick/aardvark",
  "dependencies": {
    "hapi": "^8.8.0"
  },
  "devDependencies": {
    "browserify": "^11.0.1",
    "qunitjs": "^1.18.0",
    "tap-dot": "^1.0.0",
    "tap-nyan": "0.0.2",
    "tape": "^4.0.1",
    "watchify": "^3.3.1"
  }
}
